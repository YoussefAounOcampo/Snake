<Application x:Class="Snake.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Snake"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor">#1A1A1A</SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColor">#2E2E2E</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">#525252</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#FFD700</SolidColorBrush>
        <SolidColorBrush x:Key="Overlay">#AA000000</SolidColorBrush>
        <FontFamily x:Key="MainFont">Assets/#Droid Sans Mono</FontFamily>
    </Application.Resources>
</Application>
